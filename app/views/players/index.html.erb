<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class=table>
  <thead>
    <tr>
      <th>Name</th>
      <th>X</th>
      <th>Y</th>
      <th>Prosperity</th>
      <th>Activeness</th>
      <th>Kills</th>
      <th>Status</th>
      <th>Union</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td><%= player.x %></td>
        <td><%= player.y %></td>
        <td><%= player.prosperity %></td>
        <td><%= player.activeness %></td>
        <td><%= player.kills %></td>
        <td><%= player.status %></td>
        <td><%= player.union.name %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

