<p id="notice"><%= notice %></p>

<h1>Unions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Members</th>
      <th>Prosperity</th>
      <th>Region</th>
      <th>Cities</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unions.each do |union| %>
      <tr>
        <td><%= union.name %></td>
        <td><%= union.members %></td>
        <td><%= union.prosperity %></td>
        <td><%= union.region %></td>
        <td><%= union.cities %></td>
        <td><%= link_to 'Show', union %></td>
        <td><%= link_to 'Edit', edit_union_path(union) %></td>
        <td><%= link_to 'Destroy', union, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

